/* * Roman's Final Relay Wiring Test 
 * Board: ESP32
 * Pins: Signal on D4, Relay on NO/COM
 */

const int PUMP_PIN = 4; // This is the 'S' pin connection

void setup() {
  Serial.begin(115200);
  pinMode(PUMP_PIN, OUTPUT);
  
  // Start with the pump OFF (Safety first)
  digitalWrite(PUMP_PIN, LOW); 
  Serial.println("Wiring test initialized...");
}

void loop() {
  // Turn the pump ON for 2 seconds
  Serial.println("Pump Running...");
  digitalWrite(PUMP_PIN, HIGH); 
  delay(2000); 

  // Turn the pump OFF for 5 seconds
  Serial.println("Pump Stopped.");
  digitalWrite(PUMP_PIN, LOW);
  delay(5000); 
}
